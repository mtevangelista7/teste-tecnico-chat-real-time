@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="_customTheme" />
<MudDialogProvider @rendermode="RenderMode.InteractiveWebAssembly" />
<MudSnackbarProvider @rendermode="RenderMode.InteractiveWebAssembly" />

<MudLayout>
    @Body
</MudLayout>

@code {

    readonly MudTheme _customTheme = new()
        {
            PaletteDark = new PaletteDark()
            {
                Primary = "#7289DA",
                Secondary = "#99AAB5",
                Tertiary = "#FFFFFF",
                Dark = "#2C2F33",
                DarkDarken = "#23272A"
            },

            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Inter", "Roboto", "Helvetica Neue", "Helvetica", "Arial", "sans-serif", "Apple Symbols" }
                }
            }
        };
}